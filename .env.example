# ===========================================
# GUESS GAME - CONFIGURAÇÕES DE AMBIENTE
# ===========================================

# JWT Configuration
JWT_SECRET_KEY=change-this-to-a-very-secure-random-string-in-production

# PostgreSQL Database
POSTGRES_DB=guess_game
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password-in-production

# Flask Backend
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_DB_TYPE=postgres
FLASK_DB_USER=postgres
FLASK_DB_NAME=guess_game
FLASK_DB_PASSWORD=change-this-secure-password-in-production
FLASK_DB_HOST=postgres
FLASK_DB_PORT=5432

# Frontend React
REACT_APP_BACKEND_URL=http://localhost/api

# NGINX (Optional)
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Security (Production)
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring (Optional)
# ENABLE_METRICS=true
# METRICS_PORT=9090
